parameters:
    logFile: %baseDir%/logs/log.txt
    slimConfiguration:
        settings:
            httpVersion: '1.1'
            addContentLengthHeader: false
            displayErrorDetails: true
            outputBuffering: 'append'
            defaultContentType: 'application/json'

services:
    application: MyApp\Application
    - MyApp\Slim\ApplicationFactory
    dummyMiddleware: MyApp\Middleware\DummyMiddleware
    actionService: MyApp\Action\Action
    errorHandlerService: MyApp\Handlers\ErrorHandler(%slimConfiguration.settings.displayErrorDetails%)
    notFoundErrorHandlerService: MyApp\Handlers\NotFoundHandler
    notAllowedErrorHandlerService: MyApp\Handlers\NotAllowedHandler
